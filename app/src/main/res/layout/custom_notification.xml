<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/custom_notification_margin"
        android:layout_marginRight="@dimen/custom_notification_margin"
        android:src="@drawable/ic_launcher"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/custom_notification_text_size"
        android:text="@string/resident_service_running"
        style="@style/TextAppearance.Compat.Notification"
        />

    <Button
        android:id="@+id/show_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/custom_notification_text_size"
        android:text="@string/show"
        />

    <Button
        android:id="@+id/hide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/custom_notification_text_size"
        android:text="@string/hide"
        />

</LinearLayout>