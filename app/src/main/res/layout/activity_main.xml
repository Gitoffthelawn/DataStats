<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/start_button"
        />

    <TextView
        android:id="@+id/preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview"
        android:layout_below="@+id/start_button"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:id="@+id/preset_button_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/preview_text"
        android:layout_alignParentLeft="true"
        >


        <Button
            android:id="@+id/sample_1kb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1KB"
            android:textSize="@dimen/sampleButtonTextSize"
            />

        <Button
            android:id="@+id/sample_20kb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20KB"
            android:textSize="@dimen/sampleButtonTextSize"
            />

        <Button
            android:id="@+id/sample_50kb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50KB"
            android:textSize="@dimen/sampleButtonTextSize"
            />

        <Button
            android:id="@+id/sample_80kb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80KB"
            android:textSize="@dimen/sampleButtonTextSize"
            />

        <Button
            android:id="@+id/sample_100kb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100KB"
            android:textSize="@dimen/sampleButtonTextSize"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/preview_kb_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignTop="@+id/seekBar"
        android:layout_alignBottom="@+id/seekBar"
        android:gravity="center_vertical|left"
        android:layout_alignParentRight="true"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1200"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/preset_button_area"
        android:layout_toLeftOf="@+id/preview_kb_text"
        />



</RelativeLayout>
